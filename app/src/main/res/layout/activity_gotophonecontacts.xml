<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/homescreen_background"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/no_use6"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@android:color/black"
            android:text="ADD CONTACT"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="24sp"
            android:alpha="0.85" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="362dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Choose Available Contacts"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="#b83baf4a"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:id="@+id/textView4"
            android:textSize="25dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ListView
            style="@style/listview"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:id="@+id/phonecontacts"
            android:layout_alignParentTop="true"
            android:divider="#73efffea"
            android:dividerHeight="1.3dp"
            android:background="#b83baf4a"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/no_contacts_txt"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp" />
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#b83baf4a"
            android:text="No contacts"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/no_contacts_txt"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>